<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/about_image_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            app:srcCompat="@drawable/about_us_logo" />

        <TextView
            android:id="@+id/about_text1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_app_name"
            android:textColor="@color/darkgreen"
            android:textSize="@dimen/eighteen_sp" />

        <TextView
            android:id="@+id/about_text2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/about_version"
            android:textColor="@color/black"
            android:textSize="@dimen/eighteen_sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/terms_condition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="Terms and Condition"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />

            <android.support.v7.widget.AppCompatImageView
                android:id="@+id/imageView5"
                android:layout_width="40dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                app:srcCompat="@drawable/next_arrow" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/about_pulse_plus"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:text="About Pulse Plus"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_left_about_pp"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/next_arrow" />

                <android.support.v7.widget.AppCompatImageView
                    android:id="@+id/img_down_about_pp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:contentDescription="@string/app_name"
                    android:visibility="gone"
                    app:srcCompat="@drawable/down_black" />
            </FrameLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/black" />

        <LinearLayout
            android:id="@+id/sub_about_us_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <com.armor.fontlib.CTextView
                android:id="@+id/about_us_our_team"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="right"
                android:background="@drawable/button_effect_one"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/aboutus_our_team"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp"
                app:fontName="@string/MyriadPro_Regular" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@id/about_us_our_team"
                android:layout_gravity="right"
                android:background="@color/black" />


            <com.armor.fontlib.CTextView
                android:id="@+id/about_us_activity"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_us_our_team"
                android:layout_gravity="right"
                android:background="@drawable/button_effect_one"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/aboutus_activity"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp"
                app:fontName="@string/MyriadPro_Regular" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@id/about_us_activity"
                android:layout_gravity="right"
                android:background="@color/black" />


            <com.armor.fontlib.CTextView
                android:id="@+id/about_us_our_mission"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/about_us_activity"
                android:layout_gravity="right"
                android:background="@drawable/button_effect_one"
                android:button="@null"
                android:gravity="center"
                android:padding="5dp"
                android:text="@string/aboutus_mission"
                android:textColor="@color/black"
                android:textSize="@dimen/eighteen_sp"
                app:fontName="@string/MyriadPro_Regular" />

            <View
                android:layout_width="200dp"
                android:layout_height="1dp"
                android:layout_below="@id/about_us_activity"
                android:layout_gravity="right"
                android:background="@color/black" />

        </LinearLayout>
    </LinearLayout>

</LinearLayout>